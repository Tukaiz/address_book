%h1= contact_list.name

%ul
  - contact_list.address_cards.each do |ac|
    %li= link_to ac.last_name + ', ' + ac.first_name, user_address_card_path(user, ac)

= link_to 'Back', user_contact_lists_path,
  class: 'button'

= link_to 'Add Address', new_user_address_card_path(current_user, {contact_list: contact_list.id}),
  class: 'button'
= link_to 'Edit Contact List', edit_user_contact_list_path,
  class: 'button' unless contact_list.name == 'Contact List'
